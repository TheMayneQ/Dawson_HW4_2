@page
@model Dawson_HW4.Pages.Admin.ManageProductsModel
@{
    ViewData["Title"] = "Manage Products";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-page="/Admin/AddProduct">Add New Product</a>
</p>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">@Model.Message</div>
}


<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Code</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.ProductCode</td>
                <td>@product.ProductName</td>
                <td>@product.ListPrice.ToString("C")</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@product.ProductID" onsubmit="return confirm('Are you sure you want to delete this product?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>